#!/opt/perl/bin/perl

use 5.010;
use warnings;
use strict;
use autodie;

use CPAN::Package;
use Cwd             qw/abs_path/;

my $Conf = CPAN::Package->new(
    builtby     => "ben\@morrow.me.uk",

    perl        => "/opt/perl/bin/perl",
    prefix      => "/opt/perl",
    initpkgs    => [ 
        map "/packages/All/$_.txz", qw[
            pkg-1.1.3_1
            opt-perl-5.16.3
            mksh-r46
    ]],

    dist        => abs_path("dist"),
    packages    => abs_path("pkg"),

    su          => sub { 
        system "sudo", @_;
    },
);

my $jail    = $Conf->find(Jail => "91R-amd64");
my $pkg     = $jail->pkgtool;

$jail->start;
$pkg->install_pkgs($Conf->initpkgs);

for my $mod (@ARGV) {
    my $dist        = $Conf->find(Dist => $mod);
    $dist->fetch;

    my $build       = $Conf->build_for($jail, $dist);
    $build->unpack_dist;
    $build->read_meta("META");

    my $req         = $build->needed("configure");
    for (@{ $$req{needed} }) {
        say "===> INSTALL [$_]";
    }

    $build->configure_dist;
    $build->read_meta("MYMETA");

    $req            = $build->needed("build");
    for (@{ $$req{needed} }) {
        say "===> INSTALL [$_]";
    }

    $build->make_dist($_) for qw/build test install/;
    $build->fixup_install;

    $pkg->create_pkg($build);
}

$jail->injail("", $ENV{SHELL});

$jail->stop;
